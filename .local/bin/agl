#!/bin/bash
# All-git-pull stuff

fagl(){
    gitdirs=("$HOME/.vim" "$HOME/.config/powerline" "/home/pcchou/.tmux/")
    cd $HOME
    if [ ! -d ~/.git ]; then
	ln -s ~/.homegit ~/.git
    fi
    echo $HOME
    git update-all

    for gitdir in "${gitdirs[@]}";do
	cd $gitdir
	echo $gitdir
	git update-all
    done
}

if ! [ -d ~/.git ];then
    fagl
    hgt
else
    fagl
fi
